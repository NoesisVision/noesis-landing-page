---
import Button from "../shared/Button.astro";

interface Props {
    variant?: 'hero' | 'cta';
}

const { variant = 'hero' } = Astro.props;
---

<div class="newsletter-form-container">
    <form 
        id={`newsletter-form-${variant}`}
        class="py-1 pl-6 w-full pr-2 flex gap-6 items-center text-heading-3 shadow-lg shadow-box-shadow
        border border-box-border bg-box-bg rounded-full ease-linear focus-within:bg-body focus-within:border-primary"
    >
        <span class="min-w-max pr-2 border-r border-box-border">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 9v.906a2.25 2.25 0 01-1.183 1.981l-6.478 3.488M2.25 9v.906a2.25 2.25 0 001.183 1.981l6.478 3.488m8.839 2.51l-4.66-2.51m0 0l-1.023-.55a2.25 2.25 0 00-2.134 0l-1.022.55m0 0l-4.661 2.51m16.5 1.615a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V8.844a2.25 2.25 0 011.183-1.98l7.5-4.04a2.25 2.25 0 012.134 0l7.5 4.04a2.25 2.25 0 011.183 1.98V19.5z" />
            </svg>                                                                  
        </span>
        <input 
            type="email" 
            name="email" 
            placeholder="name@domain.com" 
            class="flex-1 py-3 px-2 outline-none bg-transparent placeholder:text-gray-600 dark:placeholder:text-gray-400 text-base text-gray-900 dark:text-white"
            required
        >
        <Button 
            variant="primary"
            className="min-w-max text-sm"
        >
            <span class="hidden sm:inline relative z-[5]">
                Subscribe!
            </span>
            <span class="sm:hidden inline relative z-[5]">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5" />
                </svg>                                      
            </span>
        </Button>
    </form>

    <div 
        id={`newsletter-success-${variant}`} 
        class="hidden py-8 text-center"
    >
        <h3 class="text-xl font-semibold text-primary mb-2">Thank you for subscribing!</h3>
        <p class="text-gray-600 dark:text-gray-400">
            We'll keep you updated with the latest news about Noesis.
        </p>
    </div>

    <p class={`text-xs text-gray-500 dark:text-gray-400 mt-2 ${variant === 'cta' ? 'w-full mx-auto' : 'w-full px-[5%]'}`}>
        By submitting this form, you consent to having your email processed by ITLIBRIUM Szymon Janikowski for marketing purposes related to the development of the Noesis tool. You can unsubscribe at any time.
    </p>
</div>

<style>
    /* Usunięcie białego tła podczas autouzupełniania w Chrome */
    input:-webkit-autofill,
    input:-webkit-autofill:hover,
    input:-webkit-autofill:focus {
        -webkit-box-shadow: 0 0 0px 1000px transparent inset;
        transition: background-color 5000s ease-in-out 0s;
    }

    /* Kolor tekstu podczas autouzupełniania - tryb jasny */
    input:-webkit-autofill {
        -webkit-text-fill-color: #111827 !important;
    }

    /* Kolor tekstu podczas autouzupełniania - tryb ciemny */
    :global(.dark) input:-webkit-autofill {
        -webkit-text-fill-color: #ffffff !important;
    }
</style>

<script define:vars={{ variant }}>
    document.addEventListener('DOMContentLoaded', () => {
        const form = document.getElementById(`newsletter-form-${variant}`);
        const successMessage = document.getElementById(`newsletter-success-${variant}`);

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const emailInput = form.querySelector('input[name="email"]');
            const email = emailInput.value;

            try {
                const response = await fetch('https://hook.eu2.make.com/5n1du3t3xd7edixi8wpgr8wgwx62e3lc', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email })
                });

                if (response.ok) {
                    form.style.display = 'none';
                    successMessage.style.display = 'block';
                } else {
                    throw new Error('Błąd podczas zapisywania do newslettera');
                }
            } catch (error) {
                console.error('Błąd:', error);
                alert('Przepraszamy, wystąpił błąd podczas zapisywania do newslettera. Prosimy spróbować później.');
            }
        });
    });
</script> 