---
import Button from "../shared/Button.astro";

interface Props {
    variant?: 'hero' | 'cta';
}

const { variant = 'hero' } = Astro.props;

const containerClass = variant === 'hero' 
    ? "newsletter-form-container flex justify-center w-full" 
    : "newsletter-form-container";
---

<div class={containerClass}>
    <Button variant="primary" className="ml-onclick-form" onclick="ml('show', 'it64wG', true)">
        Subscribe to updates!
    </Button>
</div>