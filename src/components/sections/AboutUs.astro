---
import Container from "../shared/Container.astro";
import Info from "../cards/Info.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";

---

<section id="about-us" class="py-20">
    <Container>
        <h2 class="text-4xl font-bold text-center mb-12 dark:text-white">Our Founders</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Marcin Markowski -->
            <div class="p-5 sm:p-6 lg:p-8 rounded-3xl border border-box-border bg-box-bg shadow-lg shadow-box-shadow relative overflow-hidden dark:bg-gray-800">
                <div class="text-center">
                    <div class="mb-4">
                        <img 
                            src="/images/founders/marcin.jpg" 
                            alt="Marcin Markowski" 
                            class="w-56 h-56 mx-auto object-contain"
                        />
                    </div>
                    <h3 class="text-xl font-semibold mb-2 dark:text-white">Marcin Markowski</h3>
                    <p class="text-gray-600 mb-4 dark:text-gray-400">Co-founder & CEO</p>
                    <p class="text-gray-700 dark:text-gray-300">
                        Doświadczony przedsiębiorca i wizjoner technologiczny z wieloletnim doświadczeniem w branży IT. 
                        Ekspert w dziedzinie rozwoju oprogramowania i zarządzania projektami.
                    </p>
                </div>
            </div>

            <!-- Szymon Janikowski -->
            <div class="p-5 sm:p-6 lg:p-8 rounded-3xl border border-box-border bg-box-bg shadow-lg shadow-box-shadow relative overflow-hidden dark:bg-gray-800">
                <div class="text-center">
                    <div class="mb-4">
                        <img 
                            src="/images/founders/szymon.png" 
                            alt="Szymon Janikowski" 
                            class="w-56 h-56 mx-auto object-contain"
                        />
                    </div>
                    <h3 class="text-xl font-semibold mb-2 dark:text-white">Szymon Janikowski</h3>
                    <p class="text-gray-600 mb-4 dark:text-gray-400">Co-founder & CTO</p>
                    <p class="text-gray-700 dark:text-gray-300">
                        Architekt systemów i innowator technologiczny. 
                        Specjalizuje się w projektowaniu skalowalnych rozwiązań i implementacji najnowszych technologii.
                    </p>
                </div>
            </div>

            <!-- Łukasz Szydło -->
            <div class="p-5 sm:p-6 lg:p-8 rounded-3xl border border-box-border bg-box-bg shadow-lg shadow-box-shadow relative overflow-hidden dark:bg-gray-800">
                <div class="text-center">
                    <div class="mb-4">
                        <img 
                            src="/images/founders/lukasz.jpg" 
                            alt="Łukasz Szydło" 
                            class="w-56 h-56 mx-auto object-contain"
                        />
                    </div>
                    <h3 class="text-xl font-semibold mb-2 dark:text-white">Łukasz Szydło</h3>
                    <p class="text-gray-600 mb-4 dark:text-gray-400">Co-founder & COO</p>
                    <p class="text-gray-700 dark:text-gray-300">
                        Ekspert w dziedzinie operacji biznesowych i rozwoju produktu. 
                        Łączy wiedzę techniczną z umiejętnościami zarządzania strategicznego.
                    </p>
                </div>
            </div>
        </div>
    </Container>
</section>
