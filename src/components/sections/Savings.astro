---
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
import Button from "../shared/Button.astro";
import BtnLink from "../shared/BtnLink.astro";

export interface Props {
    className?: string;
}

const { className } = Astro.props;
---

<section class="relative py-16 md:py-20" id="savings">
    <Container className={`space-y-6 md:space-y-8 ${className}`}>
        <div class="text-center max-w-5xl mx-auto space-y-4">
            <Title>
                Real Savings, Real Results
            </Title>
            <Paragraph>
                Stop wasting time and money on manual documentation. Noesis delivers comprehensive system knowledge at a fraction of the cost and time of traditional approaches.
            </Paragraph>
        </div>
        
        <div class="grid lg:grid-cols-2 gap-12">
            <!-- Traditional Approach -->
            <div class="bg-red-50 dark:bg-red-900/20 p-8 rounded-xl border-2 border-red-200 dark:border-red-800">
                    <div class="text-center mb-6">
                        <div class="w-16 h-16 bg-red-100 dark:bg-red-900 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-red-600">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
                            </svg>
                        </div>
                        <h3 class="text-2xl font-bold text-red-600">Traditional Manual Approach</h3>
                    </div>
                    
                    <div class="space-y-6">
                        <div class="bg-box-bg p-6 rounded-lg border border-box-border">
                            <h4 class="font-semibold mb-3 text-heading-1">Time Investment</h4>
                            <div class="space-y-2 text-sm text-heading-3">
                                <div class="flex justify-between">
                                    <span>Initial documentation setup</span>
                                    <span class="font-semibold">40-80 hours</span>
                                </div>
                                <div class="flex justify-between">
                                    <span>Monthly maintenance</span>
                                    <span class="font-semibold">20-40 hours</span>
                                </div>
                                <div class="flex justify-between">
                                    <span>Annual updates</span>
                                    <span class="font-semibold">60-120 hours</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="bg-box-bg p-6 rounded-lg border border-box-border">
                            <h4 class="font-semibold mb-3 text-heading-1">Cost Breakdown</h4>
                            <div class="space-y-2 text-sm text-heading-3">
                                <div class="flex justify-between">
                                    <span>Senior developer time (€80/hour)</span>
                                    <span class="font-semibold">€3,200-6,400</span>
                                </div>
                                <div class="flex justify-between">
                                    <span>Annual maintenance</span>
                                    <span class="font-semibold">€19,200-38,400</span>
                                </div>
                                <div class="flex justify-between border-t pt-2">
                                    <span class="font-semibold">Total annual cost</span>
                                    <span class="font-bold text-red-600">€22,400-44,800</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="bg-red-100 dark:bg-red-900/30 p-4 rounded-lg">
                            <h4 class="font-semibold mb-2 text-red-800 dark:text-red-200">Pain Points</h4>
                            <ul class="text-sm text-red-700 dark:text-red-300 space-y-1">
                                <li>• Documentation quickly becomes outdated</li>
                                <li>• High risk of human error</li>
                                <li>• Difficult to maintain consistency</li>
                                <li>• Time-consuming manual updates</li>
                            </ul>
                        </div>
                    </div>
                </div>
                
                <!-- Noesis Approach -->
                <div class="bg-green-50 dark:bg-green-900/20 p-8 rounded-xl border-2 border-green-200 dark:border-green-800">
                    <div class="text-center mb-6">
                        <div class="w-16 h-16 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-green-600">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <h3 class="text-2xl font-bold text-green-600">Noesis Automated Solution</h3>
                    </div>
                    
                    <div class="space-y-6">
                        <div class="bg-box-bg p-6 rounded-lg border border-box-border">
                            <h4 class="font-semibold mb-3 text-heading-1">Time Investment</h4>
                            <div class="space-y-2 text-sm text-heading-3">
                                <div class="flex justify-between">
                                    <span>Initial setup</span>
                                    <span class="font-semibold">2-4 hours</span>
                                </div>
                                <div class="flex justify-between">
                                    <span>Monthly maintenance</span>
                                    <span class="font-semibold">0-2 hours</span>
                                </div>
                                <div class="flex justify-between">
                                    <span>Automatic updates</span>
                                    <span class="font-semibold">0 hours</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="bg-box-bg p-6 rounded-lg border border-box-border">
                            <h4 class="font-semibold mb-3 text-heading-1">Cost Breakdown</h4>
                            <div class="space-y-2 text-sm text-heading-3">
                                <div class="flex justify-between">
                                    <span>Noesis subscription</span>
                                    <span class="font-semibold">€299/month</span>
                                </div>
                                <div class="flex justify-between">
                                    <span>Setup time (€80/hour)</span>
                                    <span class="font-semibold">€160-320</span>
                                </div>
                                <div class="flex justify-between border-t pt-2">
                                    <span class="font-semibold">Total annual cost</span>
                                    <span class="font-bold text-green-600">€3,748-3,908</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="bg-green-100 dark:bg-green-900/30 p-4 rounded-lg">
                            <h4 class="font-semibold mb-2 text-green-800 dark:text-green-200">Benefits</h4>
                            <ul class="text-sm text-green-700 dark:text-green-300 space-y-1">
                                <li>• Always up-to-date documentation</li>
                                <li>• Zero human error in analysis</li>
                                <li>• Consistent, structured output</li>
                                <li>• Instant updates with code changes</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Savings Summary -->
            <div class="mt-12 bg-box-bg p-8 rounded-xl border border-box-border">
                <h3 class="text-2xl font-bold mb-6 text-center text-heading-1">Your Annual Savings</h3>
                <div class="grid md:grid-cols-3 gap-8">
                    <div class="text-center">
                        <div class="text-4xl font-bold text-blue-600 mb-2">€18,492-40,892</div>
                        <div class="text-heading-3">Direct cost savings</div>
                    </div>
                    <div class="text-center">
                        <div class="text-4xl font-bold text-green-600 mb-2">218-438</div>
                        <div class="text-heading-3">Hours saved annually</div>
                    </div>
                    <div class="text-center">
                        <div class="text-4xl font-bold text-purple-600 mb-2">83-91%</div>
                        <div class="text-heading-3">Cost reduction</div>
                    </div>
                </div>
                
                <div class="mt-8 text-center">
                    <p class="text-lg text-heading-3 mb-6">
                        <strong>ROI: 500-1200%</strong> - Your investment pays for itself in just 1-2 months
                    </p>
                    <BtnLink variant="primary" href="https://calendly.com/szymon-noesis/30min" text="Calculate Your Savings" target="_blank" />
                </div>
            </div>
            
            <!-- Pricing Tiers -->
            <div class="mt-12">
                <h3 class="text-2xl font-bold mb-8 text-center text-heading-1">Simple, Transparent Pricing</h3>
                <div class="grid md:grid-cols-3 gap-8">
                    <div class="bg-box-bg p-6 rounded-xl border border-box-border">
                        <h4 class="text-xl font-bold mb-4 text-center text-heading-1">Starter</h4>
                        <div class="text-3xl font-bold text-center mb-6">€199<span class="text-lg text-gray-500">/month</span></div>
                        <ul class="space-y-2 text-sm text-heading-3 mb-6">
                            <li>• Up to 100k lines of code</li>
                            <li>• Basic system analysis</li>
                            <li>• Exportable documentation</li>
                            <li>• Email support</li>
                        </ul>
                        <Button variant="secondary" className="w-full">Start Free Trial</Button>
                    </div>
                    
                    <div class="bg-box-bg p-6 rounded-xl border border-primary relative">
                        <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
                            <span class="bg-primary text-white px-4 py-1 rounded-full text-sm font-semibold">Most Popular</span>
                        </div>
                        <h4 class="text-xl font-bold mb-4 text-center text-heading-1">Professional</h4>
                        <div class="text-3xl font-bold text-center mb-6">€299<span class="text-lg text-gray-500">/month</span></div>
                        <ul class="space-y-2 text-sm text-heading-3 mb-6">
                            <li>• Up to 500k lines of code</li>
                            <li>• Full P3 analysis</li>
                            <li>• AI agents integration</li>
                            <li>• Priority support</li>
                            <li>• Custom integrations</li>
                        </ul>
                        <Button variant="primary" className="w-full">Start Free Trial</Button>
                    </div>
                    
                    <div class="bg-box-bg p-6 rounded-xl border border-box-border">
                        <h4 class="text-xl font-bold mb-4 text-center text-heading-1">Enterprise</h4>
                        <div class="text-3xl font-bold text-center mb-6">€599<span class="text-lg text-gray-500">/month</span></div>
                        <ul class="space-y-2 text-sm text-heading-3 mb-6">
                            <li>• Unlimited codebase size</li>
                            <li>• Advanced analytics</li>
                            <li>• Custom knowledge models</li>
                            <li>• Dedicated support</li>
                            <li>• On-premise deployment</li>
                        </ul>
                        <Button variant="secondary" className="w-full">Contact Sales</Button>
                    </div>
                </div>
            </div>
        </div>
    </Container>
</section>
