---
import Button from "../shared/Button.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
import NewsletterForm from "../elements/NewsletterForm.astro";
---

<section  id="cta" class="pb-20">
  <Container>
    <div
      class="w-full relative py-8 md:py-10 px-6 md:px-8 rounded-2xl bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900"
    >
      <div class="absolute right-0 top-0 h-full w-full flex justify-end">
        <div class="w-28 h-28 overflow-hidden flex rounded-xl relative blur-2xl">
            <span
              class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rotate-45"
            ></span>
            <span
              class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rotate-45"
            ></span>
            <span
              class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rotate-45"
            ></span>
          </div>
      </div>

      <div class="absolute left-0 bottom-0 h-full w-full flex items-end">
        <div class="w-28 h-28 overflow-hidden flex rounded-xl relative blur-2xl">
            <span
              class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rotate-45"
            ></span>
            <span
              class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rotate-45"
            ></span>
            <span
              class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rotate-45"
            ></span>
          </div>
      </div>
      <div class="mx-auto text-center max-w-xl sm:max-w-2xl md:max-w-3xl relative">
          <h1
            class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight
            font-bold text-heading-1"
          >
              <span class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 from-20% via-primary via-30% to-green-600">Knowledge is power</span> and Noesis is here to put it at your fingertips.
          </h1>
          
        <Paragraph className={"pt-10"}>
            Be part of the <strong>future of software development!</strong>
            We're building <strong>Noesis</strong> to revolutionize how teams understand and navigate complex systems and their codebases. If you see the power of <strong>instant insights, automated visualizations, and deep system analysis</strong>, we need you in our community!<br>
            As an <strong>early adopter</strong>, you'll get:<br>
            <br>
            ✅ <strong>Exclusive access</strong> to early features and updates,<br>
            ✅ A direct <strong>impact on product development</strong> with your feedback,<br>
            ✅ The chance to <strong>shape the future of AI-assisted programming</strong><br>
        </Paragraph>
        <div class="flex justify-center items-center pt-10">
            <div class="w-full max-w-md">
                <NewsletterForm variant="cta" />
            </div>
        </div>
      </div>
    </div>
  </Container>
</section>
