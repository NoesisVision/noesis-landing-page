            <div class="mt-8 lg:mt-10 w-full flex justify-center">
                <div class="w-full max-w-md">
                    <div class="newsletter-form-container flex flex-col sm:flex-row justify-center w-full gap-4">
                        <BtnLink variant="primary" href="https://calendly.com/szymon-noesis/30min" text="Book a demo" target="_blank" />
                        <BtnLink variant="secondary" className="ml-onclick-form" href="#demo" text="Watch video" />
                    </div>
                </div>
            </div>
        </div>


    </Container>
</section>
