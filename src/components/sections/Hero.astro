---
import Button from "../shared/Button.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import ByNumber from "./ByNumber.astro";
import Title from "../shared/Title.astro";
import NewsletterForm from "../elements/NewsletterForm.astro";

---

<section id="home" class="relative pt-4 lg:pt-12">
    <Container className={"flex flex-col lg:flex-row gap-3 lg:gap-6"}>
        <div class="absolute w-full lg:w-1/2 inset-y-0 lg:right-0 ">
            <span class="absolute -left-6 md:left-4 top-8 lg:top-12 w-24 h-24 rotate-90 skew-x-12 rounded-3xl bg-green-400 blur-xl opacity-60 lg:opacity-95 lg:block hidden"></span>
            <span class="absolute right-4 bottom-8 w-24 h-24 rounded-3xl bg-primary blur-xl opacity-80"></span>
        </div>
        <span class="w-4/12 lg:w-2/12 aspect-square bg-gradient-to-tr from-primary to-green-400 absolute -top-5 lg:left-0 rounded-full skew-y-12 blur-2xl opacity-40 skew-x-12 rotate-90"></span>
        <div class="relative flex flex-col items-center text-center lg:text-left py-1 lg:py-3 xl:py-4 
        lg:items-center lg:max-w-none max-w-3xl mx-auto lg:mx-0 lg:flex-1 lg:w-1/2">
            
            <h1 class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight xl:text-6xl/tight
             font-bold text-heading-1">
                Up-to-date <span class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 from-20% via-primary via-30% to-green-600"> essential knowledge about your system</span> generated in real time from code.
            </h1>
            <Paragraph className="mt-3 lg:mt-4">
                We provide teams with up-to-date, in-depth insights into the system's <em>architecture, functionalities, and development organization</em>. We achieve this through <strong> diagrams and analyses instantly generated from code </strong> and other available sources.
            </Paragraph>
            <div class="mt-4 lg:mt-6 w-full flex justify-center">
                <div class="w-full max-w-md">
                    <NewsletterForm variant="hero" />
                </div>
            </div>
        </div>

        <div class="flex flex-1 lg:w-1/2 lg:h-auto relative lg:max-w-none lg:mx-0 mx-auto max-w-3xl">
            <img src="images/system-knowledge-3.webp" alt="Hero image" width="2350" height="2359" class="lg:absolute lg:w-full lg:h-full rounded-3xl object-cover lg:max-h-none max-h-96">
        </div>
    </Container>
</section>
